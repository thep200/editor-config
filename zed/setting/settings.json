// Zed settings
// For information on how to configure Zed, see the Zed
//
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    // UI & Themes
    "active_pane_modifiers": {
        "inactive_opacity": 0.95,
        "border_size": 0.0
    },
    "debugger": {
        "button": false,
        "dock": "right",
        "timeout": 2000,
        "save_breakpoints": true,
        "stepping_granularity": "line"
    },
    "project_panel": {
        "dock": "right",
        "starts_open": false
    },
    "status_bar": {
        "active_language_button": true,
        "experimental.show": false
    },
    "tab_bar": {
        "show": false,
        "show_nav_history_buttons": true,
        "show_tab_bar_buttons": true
    },
    "tabs": {
        "close_position": "right",
        "file_icons": false,
        "git_status": false,
        "activate_on_close": "history",
        "show_close_button": "hover",
        "show_diagnostics": "off"
    },
    "toolbar": {
        "quick_actions": false,
        "breadcrumbs": false,
        "selections_menu": true,
        "agent_review": true,
        "code_actions": true
    },
    "gutter": {
        "line_numbers": false
    },
    "scrollbar": {
        "show": "never"
    },
    "minimap": {
        "show": "never",
        "thumb": "always",
        "thumb_border": "left_open",
        "current_line_highlight": null
    },
    "title_bar": {
        "show_branch_icon": true,
        "show_branch_name": true,
        "show_project_items": true,
        "show_onboarding_banner": false,
        "show_user_picture": true,
        "show_sign_in": true,
        "show_menus": true
    },
    "theme": "Thep200 Github Dark",
    "icon_theme": "Catppuccin Latte",
    "cursor_blink": true,
    "cursor_shape": "bar",
    "line_indicator_format": "long",
    "extend_comment_on_newline": false,

    // Fonts
    "ui_font_family": "Monaspace Argon",
    "buffer_font_family": "Monaspace Argon",
    "ui_font_size": 15.5,
    "buffer_font_weight": 450,
    "buffer_font_size": 14.5,
    "agent_buffer_font_size": 13.5,
    "buffer_line_height": {
        "custom": 2.25
    },
    "buffer_font_features": {
        "calt": false
    },

    // Editor
    "outline_panel": {
        "dock": "right"
    },
    "autosave": {
        "after_delay": {
            "milliseconds": 500
        }
    },
    "file_finder": {
        "include_ignored": true,
        "skip_focus_for_active_in_search": true
    },
    "file_scan_exclusions": [
        "**/.git",
        "**/.svn",
        "**/.hg",
        "**/.jj",
        "**/CVS",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/.classpath",
        "**/.settings",
        "**/__debug_*"
    ],
    "private_files": [
        "**/.env*",
        "**/*.pem",
        "**/*.key",
        "**/*.cert",
        "**/*.crt",
        "**/secrets.yml"
    ],
    "base_keymap": "VSCode",
    "restore_on_startup": "last_session",
    "restore_on_file_reopen": true,
    "autoscroll_on_clicks": true,
    "current_line_highlight": "all",
    "format_on_save": "on",
    "ensure_final_newline_on_save": true,
    "multi_cursor_modifier": "alt",

    // Predictions
    "snippet_sort_order": "inline",
    "show_edit_predictions": true,
    "inline_code_actions": true,
    "features": {
        "edit_prediction_provider": "copilot"
    },
    "edit_predictions": {
        "mode": "eager"
    },
    "agent": {
        "always_allow_tool_actions": true,
        "button": false,
        "dock": "left",
        "default_profile": "write",
        "default_model": {
            "provider": "copilot_chat",
            "model": "grok-code-fast-1"
        }
    },

    // Languages
    "inlay_hints": {
        "show_background": false,
        "enabled": true,
        "show_type_hints": false,
        "show_value_hints": false,
        "show_other_hints": false,
        "show_parameter_hints": true,
        "toggle_on_modifiers_press": {
            "function": true
        }
    },
    "languages": {
        "YAML": {
            "tab_size": 2,
            "hard_tabs": false
        },
        "Dockerfile": {
            "tab_size": 2,
            "hard_tabs": false
        },
        "JSONC": {
            "tab_size": 4,
            "hard_tabs": false
        },
        "JSON": {
            "tab_size": 4,
            "hard_tabs": false
        },
        "PHP": {
            "language_servers": ["intelephense", "!phpactor"],
            "tab_size": 4,
            "hard_tabs": false
        },
        "Go": {
            "edit_predictions_disabled_in": ["comment", "string"],
            "tab_size": 4,
            "hard_tabs": true
        }
    },
    "auto_install_extensions": {
        "html": false,
        "php": true,
        "sql": true,
        "dockerfile": true,
        "catppuccin icons": true,
        "make": true,
        "proto": true
    },

    // Git
    "git_panel": {
        "dock": "right"
    },
    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": {
            "enabled": true
        },
        "hunk_style": "staged_hollow",
        "blame": {
            "show_avatar": true
        }
    },

    // Telemetry
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    }
}
