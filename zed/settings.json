// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // UI & Themes
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },
  "theme": "Ayu Light",
  "icon_theme": "Catppuccin Latte",
  "cursor_blink": true,
  "cursor_shape": "bar",
  "line_indicator_format": "long",
  "terminal": {
    "button": false
  },
  "debugger": {
    "button": false
  },
  "notification_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false
  },
  "project_panel": {
    "dock": "right",
    "auto_fold_dirs": false
  },
  "search": {
    "button": false
  },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": true,
    "show_tab_bar_buttons": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": false,
    "git_status": false,
    "activate_on_close": "history",
    "show_close_button": "hover",
    "show_diagnostics": "off"
  },
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": false,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": true
  },
  "gutter": {
    "line_numbers": false
  },
  "scrollbar": {
    "show": "never"
  },
  "minimap": {
    "show": "never",
    "thumb": "always",
    "thumb_border": "left_open",
    "current_line_highlight": null
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": false,
    "show_user_picture": true,
    "show_sign_in": true,
    "show_menus": true
  },
  "extend_comment_on_newline": false,
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "italic",
        "color": "#8B949E"
      },
      "keyword": {
        "font_style": "italic"
      }
    },

    "border": "#FCFCFC",
    // "pane.focused_border": "#FF0000",
    // "panel.focused_border": "#FCFCFC",
    "panel.background": "#FCFCFC",
    "title_bar.background": "#FCFCFC",
    "status_bar.background": "#FCFCFC",
  },

  // Fonts
  "ui_font_size": 16,
  // "buffer_font_family": null,
  "buffer_font_weight": 450,
  "buffer_font_size": 14.5,
  "buffer_line_height": {
    "custom": 2.5
  },
  "buffer_font_features": {
    "calt": false
  },

  // Editor
  "base_keymap": "VSCode",
  "autosave": {
    "after_delay": {
      "milliseconds": 250
    }
  },
  "restore_on_startup": "last_workspace",
  "restore_on_file_reopen": true,
  "autoscroll_on_clicks": true,
  "current_line_highlight": "all",
  "format_on_save": "on",
  "ensure_final_newline_on_save": true,
  "multi_cursor_modifier": "alt",
  "file_scan_exclusions": [],

  // Suggestions
  "snippet_sort_order": "inline",
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "eager"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },

  // Languages
  "inlay_hints": {
    "enabled": true
  },
  "languages": {
    "PHP": {
      "language_servers": ["intelephense", "!phpactor"]
    },
    "Go": {
      "edit_predictions_disabled_in": ["comment", "string"]
    }
  },

  // Git
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    },
    "hunk_style": "staged_hollow"
  },

  // Extensions
  "auto_install_extensions": {
    "PHP": true,
    "Proto": true,
    "Catppuccin Icons": true
  },

  // Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
