{
    // Editor
    "editor.autoClosingBrackets": "always",
    "editor.bracketPairColorization.enabled": false,
    "editor.fastScrollSensitivity": 15,
    "editor.definitionLinkOpensInPeek": true,
    "editor.autoClosingQuotes": "always",
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "expand",
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.stickyScroll.enabled": true,
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.codeActionWidget.includeNearbyQuickFixes": true,
    // Editor completely setting
    "editor.tabCompletion": "on",
    "editor.suggest.preview": true,
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggest.showIcons": true,
    "editor.inlineSuggest.enabled": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.wordBasedSuggestions": "allDocuments",
    "editor.parameterHints.enabled": true,
    "editor.quickSuggestionsDelay": 5,
    "editor.stickyScroll.maxLineCount": 3,
    "editor.minimap.renderCharacters": false,
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },
    // Editor color
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "string",
                ],
                "settings": {
                    "foreground": "#7EE787",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "constant.numeric"
                ],
                "settings": {
                    "foreground": "#FF7B72",
                }
            },
            {
                "scope": [
                    "comment",
                ],
                "settings": {
                    "foreground": "#8B949E",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "keyword",
                    "storage.type",
                    "keyword.control",
                    "keyword.operator",
                    "storage.modifier",
                    "keyword.other.unit",
                    "constant.character.escape"
                ],
                "settings": {
                    "fontStyle": "italic bold"
                }
            },
            {
                "scope": [
                    "variable"
                ],
                "settings": {
                    "foreground": "#0d9488",
                }
            },
            {
                "scope": [
                    "keyword.control",
                    "keyword.control.loop.vue",
                    "entity.other.attribute-name",
                    "keyword.control.conditional.vue"
                ],
                "settings": {
                    "foreground": "#c4b5fd"
                }
            },
            {
                "scope": [
                    "support.constant.property-value.css",
                    "constant.other.color.rgb-value.hex.css",
                    "punctuation.definition.template-expression.end",
                    "punctuation.definition.template-expression.begin",
                ],
                "settings": {
                    "foreground": "#FF9F50"
                }
            },
        ]
    },

    // Workbench
    "workbench.commandPalette.preserveInput": true,
    "workbench.list.smoothScrolling": true,
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
        // Themes color
        "panel.border": "#1e1e1e",
        "sideBar.border": "#1e1e1e",
        "terminal.border": "#1e1e1e",
        "menu.background": "#1e1e1e",
        "titleBar.border": "#1e1e1e",
        "scrollbar.shadow": "#1e1e1e",
        "editor.background": "#1e1e1e",
        "sideBar.background": "#1e1e1e",
        "terminal.background": "#1e1e1e",
        "menu.selectionBorder": "#1e1e1e",
        "activityBar.background": "#1e1e1e",
        "notifications.background": "#1e1e1e",
        "titleBar.activeBackground": "#1e1e1e",
        "titleBar.inactiveBackground": "#1e1e1e",
        "sideBarSectionHeader.background": "#1e1e1e",
        // Peek
        "peekViewTitle.background": "#1e1e1e",
        "peekViewResult.background": "#1e1e1e",
        "peekViewEditor.background": "#1e1e1e",
        "peekViewEditorGutter.background": "#1e1e1e",
        // Current line
        "editor.lineHighlightBackground": "#64748b10",
        "editor.hoverHighlightBackground": "#64748b10",
        // Select word
        "editor.selectionBackground": "#64748b50",
        "editor.wordHighlightBackground": "#64748b30",
        "editor.selectionHighlightBackground": "#64748b10",
        // Find word
        "editor.findMatchBackground": "#64748b60",
        "editor.findMatchHighlightBackground": "#64748b20",
        // Bracket
        "editorBracketMatch.border": "#64748b",
        "editorBracketMatch.background": "#64748b50",
        // Files selection
        "list.hoverForeground": "#FFF",
        "list.hoverBackground": "#64748b30",
        "list.inactiveFocusOutline": "#64748b",
        "list.focusAndSelectionOutline": "#64748b",
        "list.activeSelectionForeground": "#FFF",
        "list.activeSelectionBackground": "#64748b50",
        "list.inactiveSelectionForeground": "#FFF",
        "list.inactiveSelectionBackground": "#64748b50",
        // Sticky
        "editorStickyScroll.shadow": "#1e1e1e",
        "editorStickyScrollHover.background": "#64748b20",
        // Widget
        "editorWidget.border": "#64748b",
        "editorWidget.background": "#1e1e1e",
        "editorSuggestWidget.border": "#64748b",
        "editorSuggestWidget.background": "#1e1e1e",
        // Input
        "input.border": "#64748b",
        // Notification
        "notificationToast.border": "#64748b",
        // Profile
        "profileBadge.foreground": "#FFF",
        "profileBadge.background": "#187a46",
    },
    // Files
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    // Search
    "search.useIgnoreFiles": false,
    "search.useParentIgnoreFiles": true,
    "search.useGlobalIgnoreFiles": true,
    // zenMode
    "zenMode.restore": true,
    "zenMode.showTabs": "none",
    // Tab & breadcrumbs
    "breadcrumbs.enabled": false,
    "workbench.editor.showTabs": "none",
    // Others
    "window.commandCenter": false,
    "window.titleSeparator": " ü¶£ ",
    "diffEditor.ignoreTrimWhitespace": false,
    "window.title": " ${separator}${activeEditorShort}",
    // Not Synced settings
    "settingsSync.ignoredSettings": [
        "editor.fontSize",
        "editor.fontFamily",
        "editor.lineHeight",
        "editor.fontWeight",
        "editor.letterSpacing",
        "editor.codeLensFontFamily",
        "terminal.integrated.fontFamily",
        "terminal.integrated.fontSize",
        "terminal.integrated.letterSpacing",
        "terminal.integrated.fontWeight",
        "vscode_custom_css.imports"
    ],
    "editor.fontSize": 14,
    "editor.lineHeight": 3.25,
    "editor.letterSpacing": 1.5,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.letterSpacing": 2,
    "editor.lineNumbers": "off",
    "editor.fontWeight": "500",
    "terminal.integrated.fontWeight": "600",
    "editor.fontFamily": "Victor Mono",
    "editor.codeLensFontFamily": "Victor Mono",
    "terminal.integrated.fontFamily": "Victor Mono",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "vscode_custom_css.imports": [
        "file:///Users/thep200/Projects/Study/editor-config/themes/style.css",
        "file:///Users/thep200/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.3/dist/updateHandler.js"
    ],
    // Mouse setting
    "editor.cursorStyle": "line-thin",
    "editor.cursorSmoothCaretAnimation": "on",
    // Explorer setting
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // Gitlen settings
    "diffEditor.codeLens": true,
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.pullRequests.enabled": false,
    "gitlens.currentLine.scrollable": false,
    "gitlens.showWelcomeOnInstall": false,
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.virtualRepositories.enabled": false,
    "gitlens.advanced.repositorySearchDepth": 1,
    "gitlens.blame.fontFamily": "Victor Mono",
    "gitlens.currentLine.fontFamily": "Victor Mono",
    "gitlens.blame.fontStyle": "italic",
    "gitlens.currentLine.fontStyle": "italic",
    "gitlens.currentLine.format": "üêæ ${author}, ${agoOrDate}",
    "git.openRepositoryInParentFolders": "never",
    // PHP setting
    "php.suggest.basic": true,
    "php.completion.parameters": "parentheses",
    "php.inlayHints.parameters.enabled": true,
    "php.inlayHints.types.return": true,
    "php.hover.fullname": true,
    // Daily settings
    "editor.minimap.enabled": false,
    "workbench.layoutControl.enabled": false,
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.iconTheme": "eq-material-theme-icons-light",
    // Turn on/off sound
    "editor.accessibilitySupport": "on",
    "php.debug.port": [
        9003,
        9000
    ],
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1"
    },
    "search.exclude": {
        "**/vendor": true
    },
    "github.copilot.chat.welcomeMessage": "never",
    "workbench.statusBar.visible": false,
    "workbench.colorTheme": "Default Dark+",
    "editor.inlayHints.enabled": "onUnlessPressed",
    "workbench.activityBar.location": "hidden",
}
