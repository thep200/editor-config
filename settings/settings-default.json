{
    // Editor
    "editor.autoClosingBrackets": "always",
    "editor.bracketPairColorization.enabled": false,
    "editor.fastScrollSensitivity": 15,
    "editor.definitionLinkOpensInPeek": true,
    "editor.autoClosingQuotes": "always",
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "expand",
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.stickyScroll.enabled": true,
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.codeActionWidget.includeNearbyQuickFixes": true,

    // Editor completely setting
    "editor.tabCompletion": "on",
    "editor.suggest.preview": true,
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggest.showIcons": true,
    "editor.inlineSuggest.enabled": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.wordBasedSuggestions": "allDocuments",
    "editor.parameterHints.enabled": true,
    "editor.quickSuggestionsDelay": 5,
    "editor.quickSuggestions":
    {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },

    // Editor color
    "editor.tokenColorCustomizations":
    {
        "textMateRules": [
            {
                "scope": [
                    "string",
                    "punctuation.definition.string"
                ],
                "settings": {
                    "foreground": "#A5D6FF",
                }
            },
            {
                "scope": [
                    "comment"
                ],
                "settings": {
                    "foreground": "#8B949E",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "string.regexp",
                    "storage.modifier",
                    "storage.type",
                    "keyword",
                    "keyword.control",
                    "keyword.operator",
                    "keyword.other.unit",
                    "constant.character.escape"
                ],
                "settings": {
                    "foreground": "#FF7B72",
                    "fontStyle": "italic bold"
                }
            },
            {
                "scope": [
                    "support.type",
                    "entity.name.tag",
                    "support.class.component",
                    "support.type.property-name",
                    "punctuation.section.embedded.begin.php",
                    "support.type.vendored.property-name.css",
                ],
                "settings": {
                    "foreground": "#7EE787",
                }
            },
            {
                "scope": [
                    "variable.language",
                    "constant.other",
                    "entity.name.type.namespace",
                    "support.other.namespace",
                    "variable.other.constant",
                    "entity.name.namespace",
                    "punctuation.definition.variable",
                    "entity.other.attribute-name.class.css",
                    "entity.other.attribute-name.pseudo-class.css",
                    "entity.other.attribute-name.id.css",
                    "entity.name.tag.css"
                ],
                "settings": {
                    "foreground": "#80B8ff",
                }
            },
            {
                "scope": [
                    "variable",
                    "text.html",
                    "punctuation.definition.tag",
                    "punctuation.separator.inheritance",
                    "invalid.illegal.character-not-allowed-here.html",
                ],
                "settings": {
                    "foreground": "#E6EDF3",
                }
            },
            {
                "scope": [
                    "constant.numeric",
                    "constant.language",
                    "support.class",
                    "entity.name.type",
                    "entity.other.inherited-class",
                    "punctuation.definition.template-expression.begin",
                    "punctuation.definition.template-expression.end",
                    "support.constant.property-value.css",
                    "constant.other.color.rgb-value.hex.css"
                ],
                "settings": {
                    "foreground": "#FF9F50",
                }
            },
            {
                "scope": [
                    "entity.other.attribute-name",
                    "keyword.control.loop.vue",
                    "keyword.control.conditional.vue",
                ],
                "settings": {
                    "foreground": "#D2A8FF",
                }
            }
        ]
    },

    // Workbench
    "workbench.commandPalette.preserveInput": true,
    "workbench.list.smoothScrolling": true,
    "workbench.sideBar.location": "right",
    "workbench.colorTheme": "Default Dark+",
    "workbench.layoutControl.enabled": false,
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.statusBar.visible": false,
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations":
    {
        // Themes color
        "editor.background": "#191b23",
        "editorSuggestWidget.background": "#191b23",
        "editorWidget.background": "#191b23",
        "menu.background": "#191b23",
        "sideBar.background": "#191b23",
        "sideBar.border": "#191b23",
        "sideBarSectionHeader.background": "#191b23",
        "titleBar.activeBackground": "#191b23",
        "titleBar.border": "#191b23",
        "titleBar.inactiveBackground": "#191b23",
        "terminal.background": "#191b23",
        "activityBar.background": "#191b23",
        "notifications.background": "#191b23",
        "terminal.border": "#191b23",
        "menu.selectionBorder": "#191b23",
        "panel.border": "#191b23",
        "editorSuggestWidget.border": "#191b23",
        "scrollbar.shadow": "#191b23",

        // Peek color handle
        "peekViewEditor.background": "#191b23",
        "peekViewEditorGutter.background": "#191b23",
        "peekViewTitle.background": "#191b23",
        "peekViewResult.background": "#191b23",

        // Current line highlight handle
        "editor.hoverHighlightBackground": "#1F6FEB10",
        "editor.lineHighlightBackground": "#1F6FEB10",

        // Select work color highlight handel
        "editor.selectionBackground": "#1F6FEB50",
        "editor.wordHighlightBackground": "#1F6FEB30",
        "editor.selectionHighlightBackground": "#1F6FEB10",

        // Find word color highlight handel
        "editor.findMatchHighlightBackground": "#1F6FEB20",
        "editor.findMatchBackground": "#1F6FEB60",

        // Backet match color highlight handel
        "editorBracketMatch.border": "#1F6FEB",
        "editorBracketMatch.background": "#1F6FEB50",

        // Files selection color highlight handle
        "list.hoverForeground": "#FFF",
        "list.inactiveSelectionForeground": "#FFF",
        "list.hoverBackground": "#1F6FEB30",
        "list.inactiveSelectionBackground": "#1E90FF50",

        // Profile badge highlight handel
        "profileBadge.foreground":"#FFF",
        "profileBadge.background":"#187a46",

        // Sticky effect handle
        "editorStickyScroll.shadow": "#191b23",
        "editorStickyScrollHover.background": "#1E90FF20",

        // Widget color handle
        "editorWidget.border": "#1F6FEB",

        // Input handle color
        "input.border": "#1F6FEB"
    },

    // Files
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    // Search
    "search.useIgnoreFiles": false,
    "search.useParentIgnoreFiles": true,
    "search.useGlobalIgnoreFiles": true,

    // zenMode
    "zenMode.restore": true,
    "zenMode.showTabs": "none",

    // Others
    "diffEditor.ignoreTrimWhitespace": false,
    "window.commandCenter": false,
    "window.customTitleBarVisibility": "never",

    // Not Synced settings
    "settingsSync.ignoredSettings": [
        "editor.fontSize",
        "editor.fontFamily",
        "editor.lineHeight",
        "editor.fontWeight",
        "editor.letterSpacing",
        "editor.codeLensFontFamily",
        "terminal.integrated.fontFamily",
        "terminal.integrated.fontSize",
        "terminal.integrated.letterSpacing",
        "terminal.integrated.fontWeight",
        "vscode_custom_css.imports"
    ],
    "editor.fontSize": 17,
    "editor.lineHeight": 4.5,
    "editor.letterSpacing": 1.75,
    "terminal.integrated.fontSize": 17,
    "terminal.integrated.letterSpacing": 1.75,
    "editor.fontWeight": "500",
    "terminal.integrated.fontWeight": "600",
    "editor.fontFamily": "Victor Mono",
    "editor.codeLensFontFamily": "Victor Mono",
    "terminal.integrated.fontFamily": "Victor Mono",
    "vscode_custom_css.imports": [
        "file:///Users/thep200/Code/Study/editor-config/themes/style.css",
        "file:///Users/thep200/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.1/dist/updateHandler.js"
    ],

    // Mouse setting
    "editor.cursorStyle": "line-thin",
    "editor.cursorSmoothCaretAnimation": "on",
    "terminal.integrated.cursorBlinking": true,

    // Explorer setting
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    // Gitlen settings
    "diffEditor.codeLens": true,
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.pullRequests.enabled": false,
    "gitlens.currentLine.scrollable": false,
    "gitlens.showWelcomeOnInstall": false,
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.virtualRepositories.enabled": false,
    "gitlens.advanced.repositorySearchDepth": 1,
    "git.openRepositoryInParentFolders": "never",
    "gitlens.currentLine.format": "ðŸ™„ ${author}, ${agoOrDate}",

    // PHP setting
    "php.completion.parameters": "parentheses",
    "php.inlayHints.parameters.enabled": true,
    "php.inlayHints.types.return": true,
    "php.hover.fullname": true,
    "php.linkedEditing.variables": true,
    "php.workspace.includePath": "${workspaceFolder}",
    "php.suggest.basic": true,
    "php.debug.port": [
        9003,
        9000
    ],

    // Daily settings change
    "workbench.iconTheme": "eq-material-theme-icons-light",
    "editor.accessibilitySupport": "off",
    "editor.minimap.renderCharacters": false,
    "intelephense.rename.namespaceMode": "all",
    "workbench.editor.showTabs": "none",
    "editor.minimap.enabled": false,
    "workbench.activityBar.location": "hidden",
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1"
    },
}
