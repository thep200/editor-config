{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "editor.fontFamily": "Consolas",
    "editor.autoClosingBrackets": "always",
    "editor.bracketPairColorization.enabled": false,
    "editor.fastScrollSensitivity": 15,
    "editor.definitionLinkOpensInPeek": true,
    "editor.autoClosingQuotes": "always",
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": true,
    "editor.cursorBlinking": "expand",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "workbench.commandPalette.preserveInput": true,
    "workbench.list.smoothScrolling": true,
    "diffEditor.ignoreTrimWhitespace": false,

    // Mouse setting
    "editor.cursorSmoothCaretAnimation": "on",
    "terminal.integrated.cursorBlinking": true,

    // Completely setting
    "editor.tabCompletion": "on",
    "editor.suggest.preview": true,
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggest.showIcons": true,
    "editor.quickSuggestionsDelay": 3,
    "editor.inlineSuggest.enabled": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.wordBasedSuggestionsMode": "allDocuments",
    "editor.parameterHints.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.quickSuggestions":
    {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },

    // Terminal settings
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.fontWeight": "600",

    // File setting
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    // Gitlen settings
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "editor.codeLensFontFamily": "Consolas",
    "diffEditor.codeLens": true,

    // Workbench color custom
    "workbench.colorCustomizations":
    {
        "activityBar.background": "#1C1C1C",
        "editor.background": "#1C1C1C",
        "editor.findMatchBackground": "#1E90FF20",
        "editor.findMatchBorder": "#1E90FF",
        "editor.findMatchHighlightBackground": "#1E90FF50",
        "editor.lineHighlightBackground": "#1C1C1C",
        "editor.selectionBackground": "#1E90FF70",
        "editor.selectionHighlightBackground": "#1E90FF30",
        "editorBracketMatch.border": "#1E90FF80",
        "editorGroupHeader.tabsBackground": "#1C1C1C",
        "editorSuggestWidget.border": "#1E90FF30",
        "input.border": "#1E90FF",
        "list.hoverForeground": "#FFFFF0",
        "menu.background": "#1C1C1C",
        "menu.selectionBorder": "#1E90FF30",
        "sideBar.background": "#1C1C1C",
        "sideBar.border": "#292524",
        "sideBarSectionHeader.background": "#1C1C1C",
        "statusBar.background": "#1C1C1C",
        "statusBar.debuggingBackground": "#1C1C1C",
        "statusBar.noFolderBackground": "#1C1C1C",
        "tab.activeBorder": "#1E90FF",
        "tab.hoverForeground": "#FFFFFF",
        "tab.border": "#1C1C1C",
        "titleBar.activeBackground": "#1C1C1C",
        "titleBar.border": "#1C1C1C",
        "titleBar.inactiveBackground": "#1C1C1C",

        // badge
        "profileBadge.background":"#1C884C",
        "profileBadge.foreground":"#FFF"
    },

    // Custom color
    "editor.tokenColorCustomizations":
    {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "punctuation.definition.comment"
                ],
                "settings": {
                    "foreground": "#7E7E7E",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "punctuation.definition.string.begin",
                    "punctuation.definition",
                    "punctuation.separator.comma",
                    "punctuation.separator",
                    "punctuation.accessor",
                    "punctuation.terminator",
                    "keyword.operator"
                ],
                "settings": {
                    "foreground": "#FFFFFF"
                }
            },
            {
                "scope": [
                    "string.quoted",
                    "punctuation.attribute-shorthand",
                    "text.html",
                    "string.template"
                ],
                "settings": {
                    "foreground": "#FFFFF0"
                }
            },
            {
                "scope": [
                    "support.other.namespace",
                    "entity.name.type.namespace"
                ],
                "settings": {
                    "foreground": "#50C878"
                }
            },
            {
                "scope": [
                    "variable.other",
                    "variable.other.constant",
                    "support.variable",
                    "variable.parameter",
                    "punctuation.definition.variable"
                ],
                "settings": {
                    "foreground": "#D6ACFF"
                }
            },
            {
                "scope": [
                    "entity.name.type",
                    "entity.other.inherited-class"
                ],
                "settings": {
                    "foreground": "#A78BFA"
                }
            },
            {
                "scope": [
                    "entity.name.tag",
                    "punctuation.definition.tag",
                    "entity.other.attribute-name.class.css",
                    "entity.name.tag.css"
                ],
                "settings": {
                    "foreground": "#22C55E"
                }
            },
            {
                "scope": [
                    "punctuation.section.embedded.begin.php",
                    "punctuation.definition.template-expression.begin",
                    "punctuation.definition.template-expression.end"
                ],
                "settings": {
                    "foreground": "#1C884C"
                }
            },
            {
                "scope": [
                    "variable.language",
                    "storage.modifier",
                    "storage.type",
                    "keyword.control",
                    "keyword",
                    "support.class",
                    "keyword.operator.expression",
                    "keyword.operator.new"
                ],
                "settings": {
                    "foreground": "#00FF77"
                }
            },
            {
                "scope": [
                    "entity.other.attribute-name",
                    "support.type.property-name",
                    "entity.other.attribute-name.pseudo-class.css"
                ],
                "settings": {
                    "foreground": "#C0ACFA"
                }
            },
            {
                "scope": [
                    "constant.language",
                    "constant.other",
                    "constant.other.color.rgb-value",
                    "support.constant.property-value"
                ],
                "settings": {
                    "foreground": "#FCA5A5"
                }
            },
            {
                "scope": [
                    "invalid"
                ],
                "settings": {
                    "foreground": "#DC2626"
                }
            }
        ]
    },
    "workbench.iconTheme": "eq-material-theme-icons-light"
}
