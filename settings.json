{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "editor.autoClosingBrackets": "always",
    "editor.bracketPairColorization.enabled": false,
    "editor.fastScrollSensitivity": 15,
    "editor.definitionLinkOpensInPeek": true,
    "editor.autoClosingQuotes": "always",
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "expand",
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "workbench.commandPalette.preserveInput": true,
    "workbench.list.smoothScrolling": true,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    "workbench.activityBar.visible": false,
    "workbench.layoutControl.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "window.commandCenter": false,

    // Mouse setting
    "editor.cursorSmoothCaretAnimation": "on",
    "terminal.integrated.cursorBlinking": true,

    // Completely setting
    "editor.tabCompletion": "on",
    "editor.suggest.preview": true,
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggest.showIcons": true,
    "editor.inlineSuggest.enabled": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.wordBasedSuggestionsMode": "allDocuments",
    "editor.parameterHints.enabled": true,
    "editor.quickSuggestionsDelay": 10,
    "editor.quickSuggestions":
    {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },

    // Terminal settings
    "terminal.integrated.defaultProfile.windows": "Git Bash",

    // File setting
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    // Minimap
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.minimap.enabled": false,

    // Workbench color custom #1C202A
    "workbench.colorCustomizations":
    {
        "activityBar.background": "#1E1E1E",
        "editor.background": "#1E1E1E",
        "editor.findMatchBackground": "#1E90FF20",
        "editor.findMatchBorder": "#1E90FF",
        "editor.findMatchHighlightBackground": "#1E90FF50",
        "editor.lineHighlightBackground": "#1E1E1E",
        "editor.selectionBackground": "#1E90FF70",
        "editor.selectionHighlightBackground": "#1E90FF30",
        "editorBracketMatch.border": "#1E90FF80",
        "editorGroupHeader.tabsBackground": "#1E1E1E",
        "editorWidget.background": "#1E1E1E",
        "editorWidget.border": "#1E90FF",
        "editorSuggestWidget.border": "#1E90FF30",
        "tab.activeBorder": "#1E90FF",
        "tab.activeBackground": "#1B2735",
        "tab.hoverBackground": "#1B2735",
        "tab.inactiveBackground": "#1E1E1E",
        "tab.hoverForeground": "#FFFFFF",
        "tab.border": "#1E1E1E",
        "input.border": "#1E90FF",
        "menu.background": "#1E1E1E",
        "menu.selectionBorder": "#1E90FF30",
        "sideBar.background": "#1E1E1E",
        "sideBar.border": "#1E1E1E",
        "sideBarSectionHeader.background": "#1E1E1E",
        "statusBar.background": "#1E1E1E",
        "statusBar.debuggingBackground": "#1E1E1E",
        "statusBar.noFolderBackground": "#1E1E1E",
        "titleBar.activeBackground": "#1E1E1E",
        "titleBar.border": "#1E1E1E",
        "titleBar.inactiveBackground": "#1E1E1E",
        "notifications.background": "#1E1E1E",
        "list.hoverForeground": "#FFFFF0",
        "list.hoverBackground": "#1B2735",
        "list.inactiveSelectionBackground": "#1E90FF30",
        "list.inactiveSelectionForeground": "#ffffff",
        "peekViewEditorGutter.background": "#1E1E1E",
        "peekViewEditor.background": "#1E1E1E",
        "panel.border": "#363232",
        "terminal.border": "#363232",
        "profileBadge.background":"#1C884C",
        "profileBadge.foreground":"#FFF"
    },

    // Custom color
    "editor.tokenColorCustomizations":
    {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "punctuation.definition.comment"
                ],
                "settings": {
                    "foreground": "#7e7e7e",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "punctuation.definition.string.begin",
                    "punctuation.definition",
                    "punctuation.separator.comma",
                    "punctuation.separator",
                    "punctuation.accessor",
                    "punctuation.terminator"
                ],
                "settings": {
                    "foreground": "#ffffff"
                }
            },
            {
                "scope": [
                    "string.quoted",
                    "punctuation.attribute-shorthand",
                    "text.html",
                    "string.template",
                    "keyword.operator",
                    "meta.embedded"
                ],
                "settings": {
                    "foreground": "#fffff0"
                }
            },
            {
                "scope": [
                    "support.other.namespace",
                    "entity.name.type.namespace"
                ],
                "settings": {
                    "foreground": "#45aa66"
                }
            },
            {
                "scope": [
                    "variable.other",
                    "variable.other.constant",
                    "support.variable",
                    "variable.parameter",
                    "punctuation.definition.variable",
                    "entity.name.variable"
                ],
                "settings": {
                    "foreground": "#d6acff"
                }
            },
            {
                "scope": [
                    "entity.name.type",
                    "entity.other.inherited-class"
                ],
                "settings": {
                    "foreground": "#a78bfa"
                }
            },
            {
                "scope": [
                    "entity.name.tag",
                    "punctuation.definition.tag",
                    "entity.other.attribute-name.class.css",
                    "entity.other.attribute-name.id.css",
                    "entity.name.tag.css"
                ],
                "settings": {
                    "foreground": "#22c55e"
                }
            },
            {
                "scope": [
                    "punctuation.section.embedded.begin.php",
                    "punctuation.definition.template-expression.begin",
                    "punctuation.definition.template-expression.end"
                ],
                "settings": {
                    "foreground": "#1c884c",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "variable.language",
                    "storage.modifier",
                    "storage.type",
                    "keyword.control",
                    "keyword",
                    "keyword.operator.expression",
                    "keyword.operator.new",
                    "support.class",
                    "support.type"
                ],
                "settings": {
                    "foreground": "#0aff88",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "entity.other.attribute-name",
                    "support.type.property-name",
                    "entity.other.attribute-name.pseudo-class.css"
                ],
                "settings": {
                    "foreground": "#c0acfa"
                }
            },
            {
                "scope": [
                    "constant.language",
                    "constant.other",
                    "constant.character.escape",
                    "constant.other.color.rgb-value",
                    "support.constant.property-value",
                ],
                "settings": {
                    "foreground": "#fecdd3",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "invalid"
                ],
                "settings": {
                    "foreground": "#cc2626",
                }
            },
            {
                "scope": [
                    "support.attribute",
                ],
                "settings": {
                    "foreground": "#FFFFF0",
                    "fontStyle": "italic"
                }
            },
        ]
    },

    // Gitlen settings
    "diffEditor.codeLens": true,
    "editor.codeLensFontFamily": "Consolas",
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.pullRequests.enabled": false,
    "gitlens.currentLine.scrollable": false,
    "gitlens.showWelcomeOnInstall": false,
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.virtualRepositories.enabled": false,
    "gitlens.currentLine.format": "üòè ${author}, ${agoOrDate}",
    "gitlens.advanced.repositorySearchDepth": 1,

    // UnoCSS
    "unocss.underline": false,
    "unocss.colorPreview": false,

    // Daily settings and ignore settings
    "workbench.iconTheme": "eq-material-theme-icons-light",
    "workbench.colorTheme": "Default Dark+",
    "editor.fontFamily": "Consolas",
    "editor.lineHeight": 40,
    "editor.fontSize": 18,
    "window.zoomLevel": -1,
}
