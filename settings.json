{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "editor.autoClosingBrackets": "always",
    "editor.bracketPairColorization.enabled": false,
    "editor.fastScrollSensitivity": 15,
    "editor.definitionLinkOpensInPeek": true,
    "editor.autoClosingQuotes": "always",
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "expand",
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize":0,
    "workbench.commandPalette.preserveInput": true,
    "workbench.list.smoothScrolling": true,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    "workbench.layoutControl.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "window.commandCenter": false,

    // Mouse setting
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "line-thin",
    "terminal.integrated.cursorBlinking": true,

    // Completely setting
    "editor.tabCompletion": "on",
    "editor.suggest.preview": true,
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggest.showIcons": true,
    "editor.inlineSuggest.enabled": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.wordBasedSuggestionsMode": "allDocuments",
    "editor.parameterHints.enabled": true,
    "editor.quickSuggestionsDelay": 10,
    "editor.quickSuggestions":
    {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },

    // Terminal settings
    "terminal.integrated.defaultProfile.windows": "Git Bash",

    // File setting
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    // Minimap
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.minimap.enabled": false,

    // Workbench color custom #1C202A
    "workbench.colorCustomizations":
    {
        "button.background": "#238636",
        "button.hoverBackground": "#2ea043",
        "activityBar.background": "#1B1B1A",
        "editor.background": "#1B1B1A",
        "terminal.background": "#1B1B1A",
        "editor.findMatchBackground": "#1F6FEB20",
        "editor.findMatchBorder": "#1F6FEB",
        "editor.findMatchHighlightBackground": "#1F6FEB50",
        "editor.lineHighlightBackground": "#1B1B1A",
        "editor.selectionBackground": "#1F6FEB70",
        "editor.selectionHighlightBackground": "#2ea04350",
        "editorBracketMatch.border": "#1E90FF80",
        "editorGroupHeader.tabsBackground": "#1B1B1A",
        "editorWidget.background": "#1B1B1A",
        "editorWidget.border": "#1F6FEB",
        "editorSuggestWidget.border": "#1F6FEB30",
        "tab.activeBorder": "#1F6FEB",
        "tab.activeBackground": "#1B2735",
        "tab.hoverBackground": "#1B2735",
        "tab.inactiveBackground": "#1B1B1A",
        "tab.hoverForeground": "#FFFFFF",
        "tab.border": "#1B1B1A",
        "input.border": "#1F6FEB",
        "menu.background": "#1B1B1A",
        "menu.selectionBorder": "#1F6FEB30",
        "sideBar.background": "#1B1B1A",
        "sideBar.border": "#1B1B1A",
        "sideBarSectionHeader.background": "#1B1B1A",
        "statusBar.background": "#1B1B1A",
        "statusBar.debuggingBackground": "#1B1B1A",
        "statusBar.noFolderBackground": "#1B1B1A",
        "titleBar.activeBackground": "#1B1B1A",
        "titleBar.border": "#1B1B1A",
        "titleBar.inactiveBackground": "#1B1B1A",
        "notifications.background": "#1B1B1A",
        "list.hoverForeground": "#FFFFF0",
        "list.hoverBackground": "#1B2735",
        "list.inactiveSelectionBackground": "#1E90FF30",
        "list.inactiveSelectionForeground": "#ffffff",
        "peekViewEditorGutter.background": "#1B1B1A",
        "peekViewEditor.background": "#1B1B1A",
        "panel.border": "#232121",
        "terminal.border": "#232121",
        "profileBadge.background":"#1C884C",
        "profileBadge.foreground":"#FFF"
    },

    // Custom color
    "editor.tokenColorCustomizations":
    {
        "textMateRules": [
            {
                "scope": [
                    "string",
                    "punctuation.definition.string"
                ],
                "settings": {
                    "foreground": "#A5D6FF",
                }
            },
            {
                "scope": [
                    "comment"
                ],
                "settings": {
                    "foreground": "#8B949E",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "storage.modifier",
                    "storage.type",
                    "keyword",
                    "keyword.control",
                    "keyword.operator",
                    "keyword.other.unit"
                ],
                "settings": {
                    "foreground": "#FF7B72",
                    "fontStyle": "italic bold"
                }
            },
            {
                "scope": [
                    "support.type",
                    "entity.name.tag",
                    "support.class.component",
                    "support.type.property-name",
                ],
                "settings": {
                    "foreground": "#7EE787",
                }
            },
            {
                "scope": [
                    "variable.language",
                    "constant.other",
                    "support.class",
                    "support.other.namespace",
                    "variable.other.constant",
                    "punctuation.definition.variable",
                    "entity.other.attribute-name.class.css",
                    "entity.other.attribute-name.pseudo-class.css"
                ],
                "settings": {
                    "foreground": "#79C0FF",
                }
            },
            {
                "scope": [
                    "variable",
                    "text.html",
                    "punctuation.definition.tag",
                    "punctuation.separator.inheritance",
                    "invalid.illegal.character-not-allowed-here.html",
                ],
                "settings": {
                    "foreground": "#E6EDF3",
                }
            },
            {
                "scope": [
                    "constant.numeric",
                    "constant.language",
                    "entity.name.type",
                    "entity.other.inherited-class",
                    "punctuation.definition.template-expression.begin",
                    "punctuation.definition.template-expression.end",
                    "support.constant.property-value.css",
                ],
                "settings": {
                    "foreground": "#EC8E2C",
                }
            },
            {
                "scope": [
                    "entity.other.attribute-name",
                    "keyword.control.loop.vue",
                    "keyword.control.conditional.vue",
                ],
                "settings": {
                    "foreground": "#D2A8FF",
                }
            },
        ]
    },

    // Gitlen settings
    "diffEditor.codeLens": true,
    "editor.codeLensFontFamily": "Victor Mono",
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.pullRequests.enabled": false,
    "gitlens.currentLine.scrollable": false,
    "gitlens.showWelcomeOnInstall": false,
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.virtualRepositories.enabled": false,
    "gitlens.advanced.repositorySearchDepth": 1,
    "gitlens.currentLine.format": "üòè ${author}, ${agoOrDate}",
    "unocss.underline": false,
    "unocss.colorPreview": false,

    // Font and styling
    // "editor.fontLigatures": true,
    "editor.fontFamily": "Victor Mono",
    "scm.inputFontFamily": "Victor Mono",
    "debug.console.fontFamily": "Victor Mono",
    "editor.inlayHints.fontFamily": "Victor Mono",
    "editor.fontSize": 19,
    "editor.letterSpacing": 1.75,
    "editor.lineHeight": 3.35,
    "editor.fontWeight": "500",
    "terminal.integrated.fontSize": 17,
    "terminal.integrated.fontWeight": "500",
    "terminal.integrated.letterSpacing": 1.75,

    // Daily settings and ignore settings
    "workbench.iconTheme": "eq-material-theme-icons-light",
    "workbench.startupEditor": "none",
    "editor.accessibilitySupport": "off",
    "window.zoomLevel": -1.25,
    "workbench.colorTheme": "Default Dark+",
    "workbench.activityBar.visible": false,
}
