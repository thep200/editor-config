        "terminal.background": "#1b1b1b",
        "menu.selectionBorder": "#1b1b1b",
        "activityBar.background": "#1b1b1b",
        "titleBar.activeBackground": "#1b1b1b",
        "titleBar.inactiveBackground": "#1b1b1b",
        "sideBarSectionHeader.background": "#1b1b1b",
        "editorSuggestWidget.background": "#1b1b1b",
        "editorWidget.background": "#1b1b1b",
        "sideBarSectionHeader.border": "#1b1b1b",
        "editor.lineHighlightBackground": "#64748b10",
        "editor.lineHighlightBorder": "#0000",
        "editor.hoverHighlightBackground": "#64748b10",
        "editor.selectionBackground": "#64748b50",
        "editor.wordHighlightBackground": "#64748b30",
        "editor.selectionHighlightBackground": "#64748b10",
        "editor.findMatchBackground": "#64748b60",
        "editor.findMatchHighlightBackground": "#64748b20",
        "editorBracketMatch.background": "#64748b50",
        "editorStickyScroll.shadow": "#0000",
        "editorStickyScrollHover.background": "#64748b20",
        "editor.stackFrameHighlightBackground": "#64748b30",
        "editorBracketMatch.border": "#64748b",
        "editorSuggestWidget.border": "#64748b",
        "editorWidget.border": "#64748b",
        // --- Text link ---
        "textLink.activeForeground": "#ffffff",
        "textLink.foreground": "#ffffff",
        "textCodeBlock.background": "#64748b60",
        "textBlockQuote.background": "#64748b60",
        // --- Input ---
        "input.border": "#64748b",
        // --- List ---
        "list.hoverForeground": "#ffffff",
        "list.hoverBackground": "#64748b30",
        "list.inactiveFocusOutline": "#64748b",
        "list.focusAndSelectionOutline": "#64748b",
        "list.activeSelectionForeground": "#ffffff",
        "list.activeSelectionBackground": "#64748b50",
        "list.inactiveSelectionForeground": "#ffffff",
        "list.inactiveSelectionBackground": "#64748b50",
        // --- Notification ---
        "notifications.background": "#1b1b1b",
        "notifications.border": "#64748b",
        "notificationToast.border": "#64748b",
        // --- Peek editor ---
        "peekView.border": "#64748b45",
        "peekViewTitle.background": "#1b1b1b",
        "peekViewResult.background": "#1b1b1b",
        "peekViewEditor.background": "#1b1b1b",
        "peekViewEditorGutter.background": "#1b1b1b",
        "peekViewEditor.matchHighlightBackground": "#64748b50",
        "peekViewEditor.matchHighlightBorder": "#0000",
        // --- Gutter ---
        "editorGutter.addedBackground": "#3fb950ff",
        "editorGutter.modifiedBackground": "#fdba74ff",
        "editorGutter.deletedBackground": "#f85149ff",
        // --- Debug Console ---
        "debugConsole.infoBackground": "#0000",
        "debugConsole.warningBackground": "#0000",
        "debugConsole.errorBackground": "#0000",
        "debugConsole.sourceBackground": "#0000",
        "debugConsole.infoForeground": "#3fb950ff",
        "debugConsole.warningForeground": "#fdba74ff",
        "debugConsole.errorForeground": "#f85149ff",
        "debugConsole.sourceForeground": "#fdba74ff",
        // --- Scrollbar ---
        "scrollbarSlider.background": "#0000",
        "scrollbarSlider.hoverBackground": "#0000",
        "scrollbarSlider.activeBackground": "#0000"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "string",
                ],
                "settings": {
                    "foreground": "#7ee787",
                }
            },
            {
                "scope": [
                    "comment",
                    "comment.line",
                    "comment.block",
                    "comment.block.documentation",
                ],
                "settings": {
                    "foreground": "#8B949E",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "keyword",
                    "keyword.control",
                    "storage.type",
                    "storage.modifier",
                    "keyword.control.loop.vue",
                    "entity.other.attribute-name",
                    "keyword.control.conditional.vue",
                    "entity.name.tag.css",
                    "entity.other.attribute-name.id.css",
                    "entity.other.attribute-name.class.css"
                ],
                "settings": {
                    "foreground": "#c4b5fd",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "constant.numeric",
                    "keyword.other.unit",
                    "support.constant.property-value.css",
                    "constant.other.color.rgb-value.hex.css",
                    "punctuation.definition.template-expression.end",
                    "punctuation.definition.template-expression.begin"
                ],
                "settings": {
                    "foreground": "#ffa657"
                }
            },
            {
                "scope": [
                    "constant.character.escape",
                    "keyword.operator.regexp"
                ],
                "settings": {
                    "foreground": "#D16969"
                }
            },
            {
                "scope": [
                    "punctuation.definition.string.end",
                    "punctuation.definition.string.begin"
                ],
                "settings": {
                    "foreground": "#e394dc"
                }
            }
        ]
    },
    // ===================================================================
    // MISC. FEATURES
    // ===================================================================
    // --- Zen Mode ---
    "zenMode.restore": true,
    "zenMode.showTabs": "none",
    // --- Other File Types ---
    "notebook.output.fontFamily": "Monaspace argon",
    "markdown.preview.fontFamily": "Monaspace argon",
    // --- Extensions ---
    "extensions.ignoreRecommendations": true,
    // ===================================================================
    // META & SYNC
    // ===================================================================
