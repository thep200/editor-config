{
    // ===================================================================
    // WORKBENCH
    // ===================================================================
    "workbench.sideBar.location": "right",
    "workbench.activityBar.location": "hidden",
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "workbench.statusBar.visible": false,
    "workbench.startupEditor": "none",
    "workbench.list.smoothScrolling": true,
    "workbench.layoutControl.enabled": false,
    "workbench.editor.showTabs": "none",
    "workbench.editor.editorActionsLocation": "hidden",
    "breadcrumbs.enabled": false,
    // --- Window ---
    "window.zoomLevel": -0.25,
    "window.commandCenter": false,
    "window.openFilesInNewWindow": "off",
    "window.customTitleBarVisibility": "never",
    // --- Window Title ---
    "window.titleSeparator": " üåµ ",
    "window.title": " ${separator} ${activeEditorMedium}",
    // ===================================================================
    // EDITOR
    // ===================================================================
    // --- Font & Text ---
    "editor.fontFamily": "Monaspace argon",
    "editor.fontSize": 15,
    "editor.lineHeight": 2.5,
    "editor.letterSpacing": 1,
    "editor.fontWeight": "150",
    "editor.lineNumbers": "off",
    "editor.guides.indentation": true,
    "editor.bracketPairColorization.enabled": false,
    "editor.codeLensFontFamily": "Monaspace argon",
    // --- Cursor ---
    "editor.cursorBlinking": "expand",
    "editor.cursorStyle": "line-thin",
    "editor.cursorSmoothCaretAnimation": "on",
    // --- Behavior ---
    "editor.smoothScrolling": true,
    "editor.accessibilitySupport": "off",
    "editor.autoClosingQuotes": "always",
    "editor.autoClosingBrackets": "always",
    "editor.stickyScroll.enabled": true,
    "editor.stickyScroll.maxLineCount": 3,
    // --- Formatting ---
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    // --- Minimap ---
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    // --- Scrollbar ---
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.scrollbar.horizontalScrollbarSize": 0,
    // --- Inlay Hints ---
    "editor.inlayHints.enabled": "on",
    "editor.inlayHints.fontFamily": "Monaspace argon",
    // ===================================================================
    // ASSISTANCE
    // ===================================================================
    "editor.tabCompletion": "on",
    "editor.quickSuggestionsDelay": 3,
    "editor.parameterHints.enabled": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.wordBasedSuggestions": "allDocuments",
    // --- Suggest Widget ---
    "editor.suggest.preview": true,
    "editor.suggest.showIcons": true,
    "editor.suggest.showColors": true,
    "editor.suggest.showClasses": true,
    "editor.suggest.showSnippets": true,
    "editor.suggest.showKeywords": true,
    "editor.suggest.showConstants": true,
    "editor.suggest.localityBonus": true,
    "editor.suggest.filterGraceful": true,
    // --- Inline Suggest ---
    "editor.inlineSuggest.enabled": true,
    "editor.inlineSuggest.fontFamily": "Monaspace argon",
    "editor.inlineSuggest.syntaxHighlightingEnabled": false,
    // --- Chat ---
    "chat.editor.wordWrap": "on",
    "chat.fontFamily": "Monaspace argon",
    "chat.notifyWindowOnConfirmation": true,
    "chat.notifyWindowOnResponseReceived": true,
    "chat.implicitContext.suggestedContext": true,
    "chat.agent.thinkingStyle": "expanded",
    "chat.mcp.gallery.enabled": true,
    "chat.implicitContext.enabled": {
        "panel": "always",
    },
    "chat.promptFiles": true,
    "chat.promptFilesLocations": {
        ".vscode/prompts": true,
    },
    // ===================================================================
    // TERMINAL
    // ===================================================================
    "terminal.integrated.fontFamily": "Monaspace argon",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.lineHeight": 1.5,
    "terminal.integrated.letterSpacing": 1,
    "terminal.integrated.fontWeight": "150",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "terminal.integrated.env.osx": {
        "Q_NEW_SESSION": "1"
    },
    // ===================================================================
    // FILES & SEARCH
    // ===================================================================
    // --- Files ---
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    // --- Explorer  ---
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // --- Search ---
    "search.useIgnoreFiles": false,
    "search.useParentIgnoreFiles": true,
    "search.useGlobalIgnoreFiles": true,
    "search.exclude": {
        "**/vendor": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/.DS_Store": true
    },
    // ===================================================================
    // GIT & GITLENS
    // ===================================================================
    "gitlens.codeLens.enabled": false,
    "git.openRepositoryInParentFolders": "never",
    "gitlens.blame.fontStyle": "italic",
    "gitlens.blame.fontFamily": "Monaspace argon",
    "gitlens.currentLine.fontStyle": "italic",
    "gitlens.currentLine.fontFamily": "Monaspace argon",
    "gitlens.currentLine.format": "üêæ #${id} by ${author}, ${agoOrDate}",
    // ===================================================================
    // THEMING & APPEARANCE
    // ===================================================================
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "catppuccin-latte",
    "workbench.colorCustomizations": {
        "focusBorder": "#0000",
        "panel.border": "#0000",
        "sideBar.border": "#0000",
        "terminal.border": "#0000",
        "titleBar.border": "#0000",
        "scrollbar.shadow": "#0000",
