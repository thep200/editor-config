# Nginx container id
redisContainer=redis
redisPassword=secret_redis

# Check required parameter
if [ $# -eq 0 ]; then
    printf "\e[31mParameter is required\e[0m\n"
    exit 1
fi

# Specific password
while [[ "$#" -gt 0 ]]; do
    case $1 in
        --password)
            redisPassword="$2"
            shift 2
            ;;
        *)
            break
            ;;
    esac
done

# Get parameter command
parameterCommand="$@"

# Execute
docker exec -it $redisContainer bash -c "redis-cli -c <<EOF
AUTH $redisPassword
$parameterCommand
EOF" 2>/dev/null
